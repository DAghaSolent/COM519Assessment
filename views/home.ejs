<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page 🏋️</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body>
    <!-- Button that has my Linkedin connected to it -->
    <div class="container-fluid">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <a button type ="button" class="btn btn-success btn-lg" href="https://uk.linkedin.com/in/danial-agha-577367132"><i class="bi bi-linkedin"></i> Contact Me</a>
                <% if(user) { %>
                    <a button type="button" class="btn btn-primary btn-lg" href="logout"> <%= user.email %> (Logout) </a> <%
                }%>
            </form>
        </nav>
    </div>
    <!-- Simple heading for the user homepage -->
    <div class="text-center p-3">
        <div class="display-1"> User Homepage 🏋️</div>
    </div>
    <!-- Container holding Workout Logger image and Workout Management Logger Button . -->
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12"><img src="shi.jpg" alt="Shi Zhiyong" width="970" height="530"></div>
          </div>
    <form class="form-inline">
        <a button type="button" class="col-lg-9 btn btn-secondary btn-lg"  href="/view-exercise" type="button">Exercise Management Logger</button></a>
        <a button type="button" class="col-lg-9 btn btn-primary btn-lg"  href="/search-exercises" type="button">Search Exercises</button></a>
    </form>
    </div>
    <div>
        <div class="container text-center">
            <h1>Summary of Last 7 days </h1>
        <table class="table table-bordered table-dark">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Exercise Name</td>
                    <td>Weight</td>
                    <td>Sets & Reps</td>
                    <td>Comments</td>
                </tr>

                <% exercises.forEach((exercise) => { %>
                <tr>
                    <td><%= exercise.date.toDateString() %></td>
                    <td><%= exercise.exerciseName %></td>
                    <td><%= exercise.weight %></td>
                    <td><%= exercise.setAndReps %></td>
                    <td><%= exercise.comments %></td>
                </tr>
                <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>